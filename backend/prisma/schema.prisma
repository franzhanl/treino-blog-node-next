// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String
  password String

  posts Post[] 

  @@map("users")
}

model Post {
  id String @id @default(uuid())
  description String

  user_id String

  user User @relation(fields: [user_id] ,references: [id]) 

  @@map("posts")
}